{
  "name": "scopesite-content-orchestrator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build:admin": "npm ci --prefix admin && npm run build --prefix admin",
    "build:server": "tsc -p .",
    "build": "npm run build:admin && npm run build:server && node scripts/verify-admin-build.cjs",
    "start": "node dist/server.js",
    "check": "tsc -p . --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "pg": "^8.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
